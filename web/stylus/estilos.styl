@import "normalize.styl"
@import "font-dispoll"
amarillo-claro = #ffc200
facebook = #006AB1
fondo = #EEEEEE
gris-claro = #737277
gris-opaco = #D9DADE
gris-mas-opaco = #B0AFB5
gris-oscuro = #434040
negro-transparente = rgba(0,0,0,0.20)
tomate = #FF9900
twitter = #6699FF
verde = #719300
verde-opaco = #669900
a
	text-decoration none		
body
	font-family ubuntu
	background-color rgba(fondo,.2)
	font-size 16px
footer
	text-align center
img
	vertical-align top
header
	background-color amarillo-claro
	overflow hidden
	padding .5em
	position relative
	.logo
		float left
		margin 0
		padding 0
	.menu
		background-color white
		border-radius 50%
		color gris-oscuro
		font-size 2.3em
		height 40px
		margin .4em .4em 0 0
		position absolute
		right 0
		text-align center
		top 0
		width 40px
nav
	display none
section
	.redes
		border-bottom 1px solid gris-opaco
		border-top 1px solid gris-opaco
		width 95%
		margin 0 auto
		.sociales
			padding 2em 2em 1em 2em
			margin 0 auto
			width 262px
			overflow hidden
			.face
				display inline-block
				margin-right 1em
				.f
					background-color facebook
					border 1px solid gris-opaco
					border-radius 5px
					display inline-block
					padding .3em .5em
					a
						color white
				.k
					border 1px solid gris-opaco
					border-radius 5px
					display inline-block	
					padding .3em .5em
			.twitter
				display inline-block
				margin-left 1em
				.t
					display inline-block
					border-radius 5px
					border 1px solid gris-opaco
					padding .3em .5em
					a
						color gris-oscuro
				.twit
					display inline-block
					border-radius 5px
					border 1px solid gris-opaco
					padding .3em .5em
		.texto-dispoll
			padding-bottom 1em
			text-align right
			h1
				text-align center
				color gris-oscuro
				margin 0
			p
				color gris-claro
				padding 1em
				margin 0
				span
					background-color tomate
	.promocion
		margin .5em auto 3em auto
		position relative
		width 98%
		.contenedor
			overflow hidden
			.img-promocion
				margin 0
				img
					width 100%
			.fondo-promo
				background-color negro-transparente
				height 100%
				left 0
				overflow hidden
				position absolute
				top 0
				width 100%
				.titulo-promo
					font-size 1.2em
					background-color tomate
					color gris-oscuro
					padding 2.2em 2em .5em 2em
					position absolute
					top -.67em
					left -3em
					-webkit-transform rotate(-45deg)
		.pedir
			background-color tomate
			border 3px solid white
			border-radius 50px
			bottom -1.8em
			height 60px
			left 42%
			position absolute
			width 60px
			a
				color white
				display block
				font-size 1.2em
				padding 1em 0
				text-align center
	.texto-pedidos
		color gris-claro
		display block
		font-weight normal
		margin auto
		padding-bottom 1em
		text-align center
		width 95%
		a
			color gris-claro
			font-size 1.2em
	.receta
		color gris-oscuro
		font-size 1.8em
		font-style italic
		text-align center
footer
	margin-top 1em
	padding 0 .2em
	.llamanos
	.visitanos
		background-color amarillo-claro
		border-radius 5px
		padding 1em 0
		width 80%
		margin 1em auto
		span
			display block
			color gris-oscuro
	.visitanos
		margin-bottom 1em
		a
			display inline-block
			color gris-oscuro
			padding .3em
		.face
			&:before
				color facebook
				font-family font-dispoll
				font-size 1.5em
				content "\e60c"
				margin-right .2em
		.twitter
			&:before
				font-family font-dispoll
				font-size 1.3em
				margin-right .2em
				content "\e60d"
				color twitter
				
	.footer
		background-color gris-oscuro
		border-radius 5px
		padding-top 1em
		color white
		p
			a
				color rgba(white,.8)
		a
			color facebook
.correo
	position relative
	left 0
	right 0
	width 200px
	margin 1em auto 0 auto
	text-align right
	a
		
		display block
		color gris-mas-opaco
		padding .5em
		&:before
			font-family font-dispoll
			font-size 2em
			content "\e608"
			color amarillo-claro
			position absolute
			top -2px 
			left 0
.informacion
	width 320px
	margin 0 auto
	text-align center
	.item-info
		display inline-block
		background-color verde
		width 4.6em
		height 4.6em
		border-radius 50%
		span
			display block
			color white
			font-size 1em
		.texto-info
			padding .7em 0 .2em 0
		.icono-info
			font-size 2em

.recetas
	background-color rgba(black,.8)
	height 480px
	margin 0 auto
	width 320px
	overflow hidden
	.encabezado
		background-color amarillo-claro
		margin-bottom 2.5em
		padding .5em
		position relative
		.titulo
			color gris-oscuro
			font-size 1.5em
			margin 0
			text-align center
			&:after
				border-left 150px solid transparent
				border-right 150px solid transparent
				border-top 30px solid amarillo-claro
				bottom -29px
				content ""
				left 10px
				position absolute
	.items
		list-style none
		padding 0
		height 360px
		overflow auto
		.item
			border-bottom 1px solid rgba(white,.8)
			a
				padding 1em 0.8em
				font-size 1.13em
				color white
				display block
				&:hover
					background-color rgba(amarillo-claro,.9)
.menu-receta
	text-align center
	width 320px
	height 192px
	margin .5em auto

	.submenu
		display inline-block
		width 80px
		height 80px
		border-radius 50%
		background-color tomate
		margin .5em
		a
			color white	
			display block
			padding 1.9em 0
.receta-mes
.contenedor-r
	width 320px
	height 480px
	margin 0 auto
	.contenedor-r
		position relative
		.img-receta
			margin 0
			img
				width 100%
		.fondo-receta
			background-color rgba(verde-opaco,0.5)
			position absolute
			bottom 0
			left 0
			width 100%
			a
				color gris-oscuro
				padding 1em 0.5em
				display inline-block
			.ingredientes
				&:after
					font-family font-dispoll
					content "\e600"
					font-size 1.5em

.titulo
	display block
	text-align center
	font-size 1.3em
	color gris-oscuro
	margin-bottom .5em
.votacion
	margin 1em auto
	width 20em
	padding-left 1.5em
	.item-votacion
		display inline-block
		width 100px
	.num-voto
	.icono
	.descripcion
		display block
		text-align center
	.num-voto
		margin-bottom .8em
		position relative
		span
			border-radius 3px
			background-color gris-opaco
			color gris-claro
			padding 0.2em 0.4em
			&:after
				content ""
				border-left 7px solid transparent
				border-right 7px solid transparent
				border-top 5px solid gris-opaco
				position absolute
				bottom -.5em
				left 43%
	.icono
		font-size 2em
		a
			color tomate
	.descripcion
		span
			color gris-claro
.opinion
	text-align center
	margin 1em 0
	padding .5em 0
	p
		color gris-oscuro
	form
		textarea
			padding .5em
			border-radius 5px 
			color gris-claro
			margin-bottom .5em
			border 2px solid gris-opaco
			&:focus
				border 2px solid facebook
				box-shadow facebook 0 0 5px
				color gris-oscuro
			&:hover
				box-shadow rgba(facebook,.8) 0 0 5px
		.publicar
			text-align right
			width 320px
			margin 0 auto
			input
				border-radius 5px
				border 1px solid gris-claro
				padding .2em .3em
			.boton-face
				background-color facebook
				color white
			.boton-twit
				background-color twitter
			span
				color gris-claro
				margin-right .5em
@media screen and (min-width:800px)
	.redes
		text-align center
		.sociales
		.texto-dispoll
			display inline-block
			width 40%
	.contenedor-receta
		margin 0 auto
		overflow hidden
		width 95%
		.caja-recetas
			float left
			margin-left 2em
		.caja-receta
			float right
			margin-right 2em
	.caja-datos
		overflow hidden
		padding 1em
		display inline-block
		width 95%
		.llamanos
		.visitanos
			float left
			width 48%
			margin 0
		.llamanos
			margin-left .5em
		.visitanos
			margin-left 1em

@media screen and (min-width:1000px)
	body
		width 80%
		margin 0 auto
		.promocion 
			width 70%
		header
			nav
				display block
				ul
					list-style none
					padding 0
					text-align right
					li
						display inline-block
						position relative
						a
							color white
							padding 1.5em
							-webkit-transition-duration .5s
							&:hover
								background-color negro-transparente
	.menu
		display none